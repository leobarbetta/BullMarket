@model BullMarket.Web.Models.Corretagem

@{
    ViewData["Title"] = "Edit";
}

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title">Atualizar corretagem</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <form id="form">
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="DataCompra" class="control-label"></label>
                    <input asp-for="DataCompra" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Corretora" class="control-label"></label>
                    <select asp-for="Corretora" class="form-control"></select>
                </div>

                <div class="col-md-6">
                    <label asp-for="AcaoId" class="control-label"></label>
                    <select asp-for="AcaoId" class="form-control" asp-items="ViewBag.AcaoId"></select>
                </div>
                <div class="col-md-6">
                    <label asp-for="Quantidade" class="control-label"></label>
                    <input asp-for="Quantidade" class="form-control" />
                </div>

                <div class="col-md-6">
                    <label asp-for="ValorCompra" class="control-label"></label>
                    <input asp-for="ValorCompra" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="ValorAgora" class="control-label"></label>
                    <input asp-for="ValorAgora" class="form-control" />
                </div>

                <div class="col-md-6">
                    <label asp-for="Custos" class="control-label"></label>
                    <input asp-for="Custos" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Status" class="control-label"></label>
                    <select asp-for="Status" class="form-control"></select>
                </div>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
        <button type="button" onclick="Create()" class="btn btn-primary">Salvar</button>
    </div>
</div>